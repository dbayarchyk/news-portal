{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "build",
    "baseUrl": "src",
    "paths": {
      "@controllers/*": ["controllers/*"],
      "@dtos/*": ["dtos/*"],
      "@entities/*": ["entities/*"],
      "@mappers/*": ["mappers/*"],
      "@mongodb/*": ["mongodb/*"],
      "@repositories/*": ["repositories/*"],
      "@routes/*": ["routes/*"],
      "@value-objects/*": ["value-objects/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
