{
  "name": "itdog-comment-service",
  "version": "0.0.1",
  "description": "The API to work with comments",
  "main": "build/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node ./build/infrastructure/http/server.js",
    "dev": "ts-node-dev --poll src/infrastructure/http/server.ts",
    "test": "jest",
    "test:ci": "jest --changedSince=master --coverage --ci",
    "lint": "eslint . --ext .ts",
    "docker:build": "docker build . --tag dbayarchyk/${npm_package_name} --file Dockerfile",
    "docker:push": "docker push dbayarchyk/${npm_package_name}",
    "heroku:push": "heroku container:push -a ${npm_package_name} web",
    "heroku:release": "heroku container:release -a ${npm_package_name} web"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run test"
    }
  },
  "author": "Dzmitry Bayarchyk <dzmitry.bayarchyk@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.3",
    "inversify": "^5.0.1",
    "inversify-express-utils": "^6.3.2",
    "mongoose": "^5.9.27",
    "reflect-metadata": "^0.1.13",
    "shallow-equal-object": "^1.1.1",
    "uuid": "^8.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.11.0",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-typescript": "^7.10.4",
    "@types/cors": "^2.8.7",
    "@types/express": "^4.17.7",
    "@types/jest": "^26.0.8",
    "@types/mongoose": "^5.7.34",
    "@types/uuid": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^3.7.1",
    "@typescript-eslint/parser": "^3.7.1",
    "babel-jest": "^26.2.2",
    "babel-plugin-syntax-class-properties": "^6.13.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "eslint": "^7.6.0",
    "husky": "^4.2.5",
    "jest": "^26.2.2",
    "ts-node-dev": "^1.0.0-pre.51",
    "typescript": "^3.9.7"
  }
}
